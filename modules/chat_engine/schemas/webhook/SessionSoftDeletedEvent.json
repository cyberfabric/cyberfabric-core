{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "gts://gts.hyperspot.chat_engine.webhook.session_soft_deleted_event.v1~",
  "title": "Session Soft Deleted Event",
  "description": "Webhook event fired when a session is soft-deleted",
  "type": "object",
  "properties": {
    "event": {
      "type": "string",
      "const": "session.soft_deleted",
      "description": "Event type identifier"
    },
    "session_id": {
      "$ref": "../common/GtsSessionId.json",
      "description": "Session that was soft-deleted"
    },
    "client_id": {
      "type": "string",
      "description": "Owner of the session"
    },
    "deleted_at": {
      "type": "string",
      "format": "date-time",
      "description": "Timestamp when session was soft-deleted"
    },
    "scheduled_hard_delete_at": {
      "type": "string",
      "format": "date-time",
      "description": "Timestamp when session will be permanently deleted"
    },
    "timestamp": {
      "type": "string",
      "format": "date-time",
      "description": "Event generation timestamp"
    }
  },
  "required": ["event", "session_id", "deleted_at", "scheduled_hard_delete_at", "timestamp"],
  "additionalProperties": false
}
